<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView android:id="@+id/tv1"
            android:text="Vibration" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar android:id="@+id/seekBar1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:max="100" />

        <EditText
            android:id="@+id/textv1"
            android:layout_width="30dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="0"
            android:layout_toRightOf="@id/seekBar1"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <TextView android:text="Pause" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar android:id="@+id/seekBar2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:max="100"
            android:thumbTint="#ee7777"
            android:progressTint="#ee7777"/>

        <EditText
            android:id="@+id/textv2"
            android:inputType="number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/seekBar2"
            android:text="0"
            />
    </RelativeLayout>

</LinearLayout>